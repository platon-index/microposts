<h1>
  
  <%= gravatar_for @user %>
  
  <%= @user.name %>
  
</h1>

</br>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <p>
      <h4><span class="label label-success">Profile</span></h4>
      <%= @user.profile %>
    </p>
    
    <p>
      <h4><span class="label label-success">Email</span></h4>
      <%= @user.email %>
    </p>
    
    
    <p>
      <h4><span class="label label-success">Location</span></h4>
      <%= @user.location %>
    </p>
    
    </br>
    
    <button type="button" class="btn btn-default">
    <%= link_to 'Edit profile', edit_user_path(@user) %>            
    </button>
    
  </div>
</div>  