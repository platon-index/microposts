<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
  
        <%= gravatar_for @user %>
  
        <%= @user.name %>
  
      </h1>
    </section>
    
    <p>
      <h4><span class="label label-success">Profile</span></h4>
      <%= @user.profile %>
    </p>
    
    <p>
      <h4><span class="label label-success">Email</span></h4>
      <%= @user.email %>
    </p>
    
    
    <p>
      <h4><span class="label label-success">Location</span></h4>
      <%= @user.location %>
    </p>
    
    </br>
    
    <button type="button" class="btn btn-default">
    <%= link_to 'Edit profile', edit_user_path(@user) %>            
    </button>
    
  </aside>
  
  <div class="col-md-8">
    
    <% if @user.microposts.any? %>
    
      <h3>Microposts(
      <%= @user.microposts.count %>
      )</h3>
      
      <ol class="microposts">
        
        <%= render @microposts %>
        
      </ol>
    <% end %>
  </div>
</div>



</br>

