<%= form_for(@user) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= f.label :name %>
    
    <%= f.text_field :name %>
    
    
    <%= f.label :profile %>
    
    <%= f.text_area :profile %>
    
    
    <%= f.label :email %>
    
    <%= f.text_field :email %>
    
    
    <%= f.label :location %>
    
    <%= f.text_field :location %>
    
    
    <%= f.submit class: "btn btn-sm btn-primary" %>
  
  </div>
</div>  
  
<% end %>